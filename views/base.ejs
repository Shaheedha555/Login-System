<div class="text-center center-div" id="login">
    <div class="container w-25 border border-dark border-2 py-5">
        <div class="title">
            <% if(locals.logout){ %>
                <div class="alert alert-success text-center">
                    <%= logout %>
                </div>
            <% } %>
            <h2 class="font-weight-bold">Login System</h2>
            <span>Log in for the existing user</span>
            
        </div>
        <form action="/route/login" method="POST" class="pt-3">
            <div class="form-group ">
                <input type="email" name="email" id="" placeholder="email" class="form-control">
                <small class="text-start form-text text-muted ">Register email address</small>
            </div>
            <div class="form-group">
                <input type="password" name="password" id="" placeholder="password" class="form-control">
            </div>
            <button type="submit" class="btn btn-success rounded-pill mt-3">Submit</button>
        </form>
    </div>
</div>






